{% extends 'base.html.twig' %}

{% block styles %}
    <link rel="stylesheet" href="{{ asset('css/skel.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/style-wide.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/style-normal.css') }}"/>

    <!--[if lte IE 9]>
    <link rel="stylesheet" href="css/ie/v9.css"/><![endif]-->
    <!--[if lte IE 8]>
    <link rel="stylesheet" href="css/ie/v8.css"/><![endif]-->
{% endblock %}

{% block body %}
    {# INTRO SECTION #}
    <section id="intro" class="main style1 dark fullscreen">
        <div class="content container 75%">
            <header>
                <h2>{{ 'project.section.title'|trans }}</h2>
            </header>
            {{ 'intro.section.text1'|trans|raw }}
            {{ 'intro.section.text2'|trans|raw }}
            <style>
                .embed-container { position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; max-width: 100%; }
                .embed-container iframe, .embed-container object, .embed-container embed { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }
            </style>
            <div class='embed-container'>
                <iframe src='{{ youtube_url }}' frameborder='0' allowfullscreen></iframe>
            </div>
            <footer>
                <a href="#what-is-it" class="button style2 down">{{ 'button.next'|trans }}</a>
            </footer>
        </div>
    </section>

    {# WHAT IS IT SECTION #}
    <section id="what-is-it" class="main style2 right dark fullscreen">
        <div class="content box style2">
            <header>
                <h2>{{ 'what-is-it.section.title'|trans }}</h2>
            </header>
            {{ 'what-is-it.section.text1'|trans|raw }}
        </div>
        <a href="#how-work" class="button style2 down anchored">{{ 'button.next'|trans }}</a>
    </section>

    {# HOW WORK SECTION #}
    <section id="how-work" class="main style2 left dark fullscreen">
        <div class="content box style2">
            <header>
                <h2>{{ 'how-work.section.title'|trans }}</h2>
            </header>
            {{ 'how-work.section.text1'|trans|raw }}
        </div>
        <a href="#description" class="button style2 down anchored">Next</a>
    </section>

    {# DESCRIPTION SECTION #}
    <section id="description" class="main style3 primary">
        <div class="content container">
            <header>
                <h2>{{ 'description.section.title'|trans }}</h2>
                {{ 'description.section.text1'|trans|raw }}
            </header>

            {# LAST IMAGES #}
            {% set orientations = ['left', 'right'] %}
            <div class="container 75% gallery">
                {% for key, image in images %}
                    {% if cycle(orientations, key) == 'left' %}
                        <div class="row 0% images">
                    {% endif %}
                        <div class="6u">
                            <a href="{{ asset('images/locations/' ~ image.imageUrl) }}" class="image fit from-{{ cycle(orientations, key) }}">
                                <img src="{{ asset('images/locations/' ~ image.imageUrl) }}" title="{{ image.name }}" alt="{{ image.name }}" />
                            </a>
                        </div>
                    {% if cycle(orientations, key) == 'right' %}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/jquery.poptrox.min.js') }}"></script>
    <script src="{{ asset('js/jquery.scrolly.min.js') }}"></script>
    <script src="{{ asset('js/jquery.scrollex.min.js') }}"></script>
    <script src="{{ asset('js/skel.min.js') }}"></script>
    <script src="{{ asset('js/init.js') }}"></script>

    <script>
        $(function(){
            $('select').on('change', function () {
                var url = $(this).val();
                if (url) {
                    window.location = url;
                }
                return false;
            });
        });
    </script
{% endblock %}
